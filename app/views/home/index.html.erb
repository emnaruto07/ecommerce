<% if user_signed_in? %>
  <h1>Welcome Home, <%= current_user.email %></h1>
  <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete } %>
<% else %>
  <h1>Home</h1>
  <%= link_to 'Sign in', new_user_session_path %>
<% end %>

<%# only see this if the user is not logged in %>
<% if !user_signed_in? %>
  <div>
    <h1 class="font-bold text-4xl">Home</h1>
    <p>Hey, stranger!</p>
  </div>
<% end %>


